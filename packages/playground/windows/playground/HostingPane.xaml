<UserControl
    x:Class="Playground.HostingPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Playground"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock
        Grid.Column="0"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Text="JavaScript File (no extension):"/>
      <ComboBox x:Name="x_JavaScriptFilename"
        Grid.Column="1"
        Margin="2,2,2,2"
        MinWidth="250"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
        SelectionChanged="OnSelectionChanged_JavaScriptFilename" />

      <TextBlock
        Grid.Column="2"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Text="App Name:"/>
      <ComboBox
        x:Name="x_ReactAppName"
        Grid.Column="3"
        Margin="2,2,2,2"
        MinWidth="150"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectionChanged="OnSelectionChanged_ReactAppName" />
    </Grid>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="10"/> <!-- Separator -->
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="10"/> <!-- Separator -->
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>

      <Button x:Name="x_LoadButton"
        Grid.Column="0"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="Load"
        Click="OnLoadClicked"/>
      <Button x:Name="x_UnloadButton"
        Grid.Column="1"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="Unload"
        IsEnabled="false"
        Click="OnUnloadClicked"/>
      <Button x:Name="x_ReloadButton"
        Grid.Column="2"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="Reload"
        IsEnabled="false"
        Click="OnReloadClicked"/>

      <Button x:Name="x_AddPane"
        Grid.Column="4"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="+Pane"/>
      <Button x:Name="x_RemovePane"
        Grid.Column="5"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="-Pane"/>

      <TextBlock
        Grid.Column="7"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Text="JS Engine:"/>
      <ComboBox
        x:Name="x_JsEngine"
        Grid.Column="8"
        Margin="2,2,2,2"
        MinWidth="150"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center">
        <ComboBox.Items>
          <ComboBoxItem Content="Chakra" />
          <ComboBoxItem Content="Hermes" x:Name="x_engineHermes" />
          <ComboBoxItem Content="V8" x:Name="x_engineV8" />
        </ComboBox.Items>
      </ComboBox>
    </Grid>

    <StackPanel
      Grid.Row="2"
      Orientation="Horizontal">
      <CheckBox x:Name="x_UseWebDebuggerCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="true"
        Content="Web Debugger"/>
     <CheckBox x:Name="x_UseDirectDebuggerCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="false"
        Content="Direct Debugging"/>
      <CheckBox x:Name="x_BreakOnFirstLineCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="false"
        Content="Break on First Line"/>
      <CheckBox x:Name="x_UseLiveReloadCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="true"
        Content="Live Reload"/>
      <TextBlock
        VerticalAlignment="Center"
        Margin="5,0,5,3"
        Text="Debugger Port"/>
      <TextBox x:Name="x_DebuggerPort"
        Text="{x:Bind DebuggerPort, Mode=TwoWay}"
        Margin="5,0"
        VerticalAlignment="Center"
        InputScope="Number"
        MaxLength="5"
        BeforeTextChanging="OnBeforeTextChanging_CheckAllDigits"/>
      <CheckBox x:Name="x_ReuseInstanceCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="true"
        Content="Reuse Instance"/>
    </StackPanel>

    <Grid x:Name="RootElement"
      Grid.Row="3"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
  </Grid>
</UserControl>
