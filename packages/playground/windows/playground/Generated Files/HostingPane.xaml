<UserControl
    x:Class="Playground.HostingPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Playground"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock
        Grid.Column="0"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Text="JavaScript File (no extension):"/>
      <ComboBox x:ConnectionId='11' x:Name="x_JavaScriptFilename"
        Grid.Column="1"
        Margin="2,2,2,2"
        IsEditable="True"
        MinWidth="250"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
                                                                 />

      <TextBlock
        Grid.Column="2"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Text="App Name:"/>
      <ComboBox x:ConnectionId='12'
        x:Name="x_ReactAppName"
        Grid.Column="3"
        IsEditable="True"
        Margin="2,2,2,2"
        MinWidth="150"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
                                                           />
    </Grid>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="10"/> <!-- Separator -->
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>

      <Button x:ConnectionId='6' x:Name="x_LoadButton"
        Grid.Column="0"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="Load"
                             />
      <Button x:ConnectionId='7' x:Name="x_UnloadButton"
        Grid.Column="1"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="Unload"
        IsEnabled="false"
                               />
      <Button x:ConnectionId='8' x:Name="x_ReloadButton"
        Grid.Column="2"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="Reload"
        IsEnabled="false"
                               />

      <Button x:ConnectionId='9' x:Name="x_AddPane"
        Grid.Column="4"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="+Pane"/>
      <Button x:ConnectionId='10' x:Name="x_RemovePane"
        Grid.Column="5"
        Margin="2,2,2,2"
        VerticalAlignment="Center"
        Content="-Pane"/>
    </Grid>


    <StackPanel
      Grid.Row="2"
      Orientation="Horizontal">
      <CheckBox x:ConnectionId='3' x:Name="x_UseWebDebuggerCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="true"
        Content="Web Debugger"/>
      <CheckBox x:ConnectionId='4' x:Name="x_UseLiveReloadCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="true"
        Content="Live Reload"/>
      <CheckBox x:ConnectionId='5' x:Name="x_ReuseInstanceCheckBox"
        Margin="5,2"
        VerticalAlignment="Center"
        IsChecked="true"
        Content="Reuse Instance"/>
    </StackPanel>

    <Grid x:ConnectionId='2' x:Name="RootElement"
      Grid.Row="3"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
  </Grid>
</UserControl>

