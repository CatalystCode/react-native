{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "outDir": ".",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true,
    "noEmit": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "types": [
      "@wdio/sync",
      "@wdio/mocha-framework",
      "node",
      "chai"
    ]
  },
  "include": [
    "app", "wdio"
  ],
  "exclude": [
    "node_modules"
  ]
}