<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        $(MSBuildThisFileDirectory)..\Modules\boostorg\algorithm\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\asio\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\beast\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\config\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\core\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\mpl\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\preprocessor\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\range\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\system\include;
        $(MSBuildThisFileDirectory)..\Modules\boostorg\utility\include;
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
      <!--
        BOOST_ALL_NO_LIB              - Don't require prebuilt Boost DateTime LIB.
        BOOST_SYSTEM_SOURCE           - Build boost::system symbols from sources (drop dependency on boost_system.lib).
        BOOST_ERROR_CODE_HEADER_ONLY  - Compile Boost error_code members inline. Requires BOOST_SYSTEM_SOURCE.
      -->
      <PreprocessorDefinitions>
        BOOST_ALL_NO_LIB=1;
        BOOST_SYSTEM_SOURCE;
        BOOST_ERROR_CODE_HEADER_ONLY;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

</Project>