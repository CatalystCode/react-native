<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildThisFileDirectory)\Bundle.props"/>

  <ItemGroup Condition="'$(UseBundle)' == 'true' and '$(BundledContent)' != ''">
    <Content Include="$(BundledContent)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <Target Name="ReactNativeWindowsMakeBundle" BeforeTargets="PrepareForBuild" 
      Condition="'$(UseBundle)' == 'true'">
        <Warning Text="BundleCommand is not defined, and you should execute 'react-native bundle' by yourself" Condition="'$(BundleCommand)' == ''" />
        <Exec Condition="'$(BundleCommand)' != ''" Command="$(BundleCommand)" ConsoleToMSBuild="true" WorkingDirectory="$(SolutionDir).."/>
  </Target>
</Project>