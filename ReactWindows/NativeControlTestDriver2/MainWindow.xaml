<Window x:Class="NativeControlTestDriver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NativeControlTestDriver"
        xmlns:react="clr-namespace:ReactNative;assembly=ReactNative.Net46"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Run Test" Click="OnRunTestButtonClicked" Width="150" Height="32"></Button>
            <Button Content="Run Test 2" Click="OnRunTest2ButtonClicked" Width="150" Height="32"></Button>
        </StackPanel>

        <!--<ContentControl x:Name="ReactContent" Grid.Row="1" HorizontalAlignment="Stretch"></ContentControl>-->
        <!--<react:ReactRootView x:Name="RootView" Grid.Row="1" Background="Plum"/>-->
        <Canvas x:Name="ReactCanvas" Grid.Row="1" Background="Plum"/>
    </Grid>
</Window>
