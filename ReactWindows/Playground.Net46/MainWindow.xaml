<Window x:Class="Playground.Net46.MainWindow"
        x:Name="ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:react="clr-namespace:ReactNative.Views;assembly=ReactNative.Net46"
        mc:Ignorable="d"
        Title="Playground.Net46" Height="768" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0">
            <react:ReactCanvas Source="{Binding Path=RootPage}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>
