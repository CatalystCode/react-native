<UserControl x:Class="ReactNative.Views.ReactCanvas"
             x:Name="ReactCanvasUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:ReactNative"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid x:Name="LayoutRoot">
        <Frame Content="{Binding Path=Source, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, ElementName=ReactCanvasUserControl}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
