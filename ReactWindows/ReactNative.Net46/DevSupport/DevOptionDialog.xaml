<Window x:Class="ReactNative.DevSupport.DevOptionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReactNative.DevSupport"
             mc:Ignorable="d" 
             Title="Dev Options" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel Name="OptionsStackPanel">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="2" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </StackPanel.Resources>
    </StackPanel>
</Window>
